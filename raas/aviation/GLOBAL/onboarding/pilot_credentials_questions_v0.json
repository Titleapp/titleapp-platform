{
  "id": "pilot_credentials_questions_v0",
  "version": "v0",
  "title": "Pilot Credentials Onboarding",
  "purpose": "Collect pilot credentials to create Pilot DTC and initialize flight logbook",
  "questions": [
    {
      "id": "pilot_name",
      "type": "text",
      "required": true,
      "prompt": "Full name (as appears on certificate)"
    },
    {
      "id": "certificate_number",
      "type": "text",
      "required": true,
      "prompt": "FAA Certificate Number",
      "validation": "^[0-9]{7,10}$",
      "help": "Your unique FAA pilot certificate number (7-10 digits)"
    },
    {
      "id": "certificates_held",
      "type": "multi_select",
      "required": true,
      "prompt": "Certificates & Ratings Held",
      "options": [
        "student",
        "sport",
        "recreational",
        "private",
        "instrument_airplane",
        "instrument_helicopter",
        "commercial_airplane",
        "commercial_helicopter",
        "atp_airplane",
        "atp_helicopter",
        "cfi",
        "cfii",
        "mei"
      ]
    },
    {
      "id": "type_ratings",
      "type": "text_array",
      "required": false,
      "prompt": "Type Ratings (if any)",
      "help": "Aircraft requiring specific type rating (e.g., CE-500, B-737)",
      "placeholder": "B-737, CE-525"
    },
    {
      "id": "medical_class",
      "type": "single_select",
      "required": true,
      "prompt": "Current Medical Certificate Class",
      "options": [
        "first",
        "second",
        "third",
        "basic_med",
        "none"
      ]
    },
    {
      "id": "medical_expiration",
      "type": "date",
      "required": false,
      "prompt": "Medical Certificate Expiration Date"
    },
    {
      "id": "total_hours",
      "type": "number",
      "required": false,
      "unit": "hours",
      "prompt": "Total Flight Hours (approximate)"
    },
    {
      "id": "pic_hours",
      "type": "number",
      "required": false,
      "unit": "hours",
      "prompt": "Pilot-in-Command Hours (approximate)"
    },
    {
      "id": "instrument_hours",
      "type": "number",
      "required": false,
      "unit": "hours",
      "prompt": "Instrument Hours (actual + sim)"
    },
    {
      "id": "multi_engine_hours",
      "type": "number",
      "required": false,
      "unit": "hours",
      "prompt": "Multi-Engine Hours"
    },
    {
      "id": "turbine_hours",
      "type": "number",
      "required": false,
      "unit": "hours",
      "prompt": "Turbine Hours (turboprop + jet)"
    },
    {
      "id": "upload_logbook",
      "type": "file_upload",
      "required": false,
      "prompt": "Upload Logbook (optional)",
      "accepted_formats": [
        "pdf",
        "csv",
        "xlsx"
      ],
      "help": "ForeFlight export, Jeppesen export, or scanned paper logbook"
    },
    {
      "id": "upload_certificates",
      "type": "file_upload_multiple",
      "required": false,
      "prompt": "Upload Certificates (optional)",
      "accepted_formats": [
        "pdf",
        "jpg",
        "png"
      ],
      "help": "Pilot certificate, medical certificate, type rating cards"
    },
    {
      "id": "request_pria",
      "type": "boolean",
      "required": false,
      "prompt": "Request PRIA records from FAA?",
      "help": "We can submit Form 8060-11 to request your official Pilot Records Improvement Act records"
    },
    {
      "id": "api_integrations",
      "type": "multi_select",
      "required": false,
      "prompt": "Connect Flight Planning Apps (optional)",
      "options": [
        "foreflight",
        "garmin_pilot",
        "fltplan_go"
      ],
      "help": "Automatically sync flight logs from your apps"
    }
  ],
  "outputs": {
    "creates": [
      "pilot_dtc",
      "pilot_logbook"
    ],
    "verifies_against": [
      "faa_airmen_registry"
    ],
    "stores_in": [
      "dtcs",
      "logbookEntries"
    ]
  },
  "compliance": {
    "faa_verification": true,
    "blockchain_anchor": true,
    "gdpr_compliant": true,
    "data_portability": true
  }
}
